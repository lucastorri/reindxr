#!/bin/bash

# Variables that must be set:
  # JAVA_HOME
  # DATA_DIR
  # INDEX_DIR
  # LOGS_DIR
  # PIDS_DIR

cd `dirname "$0"`
if [ -a env.sh ]
then
  	source env.sh
fi


SCRIPT=`basename "$0"`
SCRIPT_DIR=`pwd`
MAIN=co.torri.reindxr.Main
CLASSPATH=$SCRIPT_DIR/../lib/reindxr.jar
LOG_FILE=$LOGS_DIR/$SCRIPT.log
PID_FILE=$PIDS_DIR/$SCRIPT.pid

case $1 in
    start)
        ps -p `cat $PID_FILE`
        if [ $? -ne 0 ]
        then
            exec 2>&1 $JAVA_HOME/bin/java -cp $CLASSPATH $MAIN "$DATA_DIR" "$INDEX_DIR" 1> $LOG_FILE &
            echo $! > $PID_FILE;
        fi
        ;;
    stop)
        kill `cat $PID_FILE` ;;
    *)
        echo "usage: $SCRIPT {start|stop}" ;;
esac

exit 0
